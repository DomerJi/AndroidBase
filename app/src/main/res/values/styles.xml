<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyToast">
        <item name="android:windowEnterAnimation">@anim/toast_enter</item>
        <item name="android:windowExitAnimation">@anim/toast_exit</item>
    </style>

    <style name="WebViewBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/webview_bar</item>
        <item name="android:indeterminateDrawable">@drawable/webview_bar</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">5dp</item>
    </style>

</resources>
